            <File Source="Content\ZeldasLibrary.dll" Name="ZeldasLibrary.dll" Id="ZeldasLibrary.dll" />
            <File Source="Content\TLoZ - Black Crown.exe.config" Name="TLoZ - Black Crown.exe.config" Id="TLoZ_Black_Crown.exe.config" />
          </Component>
          
