<Window x:Class="Zelda.Editor.Workspaces.Scripts.ScriptEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Editor" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        
        <TextBox x:Name="codeBox" AcceptsReturn="True" AcceptsTab="True" Margin="5" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="Save" Width="75" Margin="2" Click="OnSaveButtonClicked" />
            <Button Content="Cancel" Width="60" Margin="2" Click="OnCancelButtonClicked" />
        </StackPanel>        
    </Grid>
</Window>
